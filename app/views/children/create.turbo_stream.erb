<% if @child.errors.present? %>
  <%= turbo_stream.replace "child-form" do %>
    <%= render 'children/form', child: @child, user: @child.user %>
  <% end %>
<% else %>
  <%= turbo_stream.replace "index-child" do %>
    <%= render 'children/children', user: @child.user %>
  <% end %>
  <%= turbo_stream.replace "child-form" do %>
    <%= render 'children/form', child: Child.new, user: @child.user %>
  <% end %>
<% end %>